<!DOCTYPE html>
<html lang="ro">

<head>
    <%- include("../fragmente/head.ejs") %>
    <link href="/resurse/css/produs.css" type="text/css" rel="stylesheet" />
    <meta name="description" content="Magazin TeleX. Modele televizoare.Produse resigilate verificate. Returnarea produselor. Garantie 2 ani. Montarea gratis.">
    <meta name="keywords" content="televizor, Samsung, Philips, Bucuresti, lungime diagonala, transport prin curier, TeleX">
    <title>Magazin de televizoare TeleX</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include("../fragmente/header.ejs") %>

    <main>
        <section>
            <h2>Pagină produs</h2>
            <article id="art-produs">
                <h3><span class="nume"><%- prod.nume %></span></h3>
                <div class="accordion" id="productAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingDescription">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDescription" aria-expanded="false" aria-controls="collapseDescription">
                                Descriere
                            </button>
                        </h2>
                        <div id="collapseDescription" class="accordion-collapse collapse" aria-labelledby="headingDescription" data-bs-parent="#productAccordion">
                            <div class="accordion-body">
                                <p><%- prod.descriere %></p>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingDetails">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetails" aria-expanded="false" aria-controls="collapseDetails">
                                Detalii
                            </button>
                        </h2>
                        <div id="collapseDetails" class="accordion-collapse collapse" aria-labelledby="headingDetails">
                            <div class="accordion-body">
                                <p>Pret: <span class="pret"><%- prod.pret %> </span></p>
                                <p>Locatie disponibila: <span class="locatie_disponibila"><%- prod.locatie_disponibila %> </span></p>
                                <p>Tip produs: <span class="tip_produs"><%- prod.tip_produs %> </span></p>
                                <p>Diagonala: <span class="diagonala"><%- prod.diagonala %> </span></p>
                                <p>Categorie: <span class="categorie"><%- prod.categorie %> </span></p>
                                <p>Calitate: <span class="calitate"><%- prod.calitate %> </span></p>
                                <p>Garantie: <span class="garantie"><%- prod.garantie %> </span></p>
                                <p>Data adăugare: <span class="categorie"><%- prod.data_adaugare %> </span></p>
                            </div>
                        </div>
                    </div>
                </div>
                <figure class="imag-produs">
                    <img src="/resurse/imagini/produse/<%- prod.imagine %>" alt="[imagine <%- prod.nume %>]" />
                </figure>
                <button class="buton-compara">Compară</button>
            </article>
        </section>

        <section id="produse-similare">
            <h3>Produse similare</h3>
            <div class="grid-produse">
                <% for (let produs of produseSimilare) { %>
                <div class="produs" id="produs-<%= produs.id %>">
                    <a href="/produs/<%- produs.id %>">
                        <figure>
                            <img src="/resurse/imagini/produse/<%- produs.imagine %>" alt="<%- produs.nume %>" />
                        </figure>
                        <h3 class="nume"><%- produs.nume %></h3>
                    </a>
                    <div class="info-prod">
                        <p>Preț: <span class="pret"><%- produs.pret %></span></p>
                        <p>Diagonala: <span class="diagonala"><%- produs.diagonala %></span></p>
                        <p>Calitate: <span class="calitate"><%- produs.calitate %></span></p>
                    </div>
                    <button class="buton-compara">Compară</button>
                </div>
                <% } %>
            </div>
        </section>
    </main>

    <%- include("../fragmente/footer") %>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="/resurse/js/produs.js"></script>
</body>

</html>
